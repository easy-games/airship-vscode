{
	"name": "airship-vscode",
	"publisher": "easy-games",
	"displayName": "Airship Editor Extension",
	"description": "A plugin that extends the capabilities of Airship for vscode",
	"version": "1.0.0-beta.1",
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/easy-games/airship-vscode"
	},
	"main": "./out/extension.js",
	"activationEvents": [
		"workspaceContains:node_modules/@easy-games/unity-ts"
	],
	"contributes": {
		"@@typescriptServerPlugins": [
			{
				"name": "@easy-games/airship-typescript-extensions",
				"enableForWorkspaceTypeScriptVersions": true
			}
		],
		"snippets": [
			{
				"language": "typescript",
				"path": "./snippets/airship.code-snippets"
			}
		],
		"commands": [
			{
				"command": "airship.openOutput",
				"title": "View Compiled Luau Code (Output)",
				"category": "Airship"
			},
			{
				"command": "airship.start",
				"title": "Start Compiler",
				"category": "Airship"
			},
			{
				"command": "airship.stop",
				"title": "Stop Compiler",
				"category": "Airship"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "airship.openOutput",
					"when": "airship:inSrcDir"
				},
				{
					"command": "airship.start",
					"when": "!airship:compilerActive"
				},
				{
					"command": "airship.stop",
					"when": "airship:compilerActive"
				}
			]
		},
		"configuration": {
			"title": "Airship",
			"properties": {
				"airship.editor.hideDeprecated": {
					"type": "boolean",
					"default": true,
					"description": "Hide deprecated members from intellisense."
				},
				"airship.boundary.mode": {
					"type": "string",
					"default": "prefix",
					"enum": [
						"remove",
						"prefix"
					],
					"enumDescriptions": [
						"Remove cross-boundary imports from intellisense.",
						"Prefix cross-boundary imports with their boundary."
					]
				},
				"airship.command.status.show": {
					"type": "boolean",
					"default": true,
					"description": "Whether to show the status button."
				},
				"airship.command.parameters": {
					"type": "array",
					"default": [
						"build",
						"--watch",
						"--writeOnlyChanged"
					],
					"items": {
						"type": "string"
					},
					"description": "The parameters to be passed into the command triggered from the status bar."
				},
				"airship.command.development": {
					"type": "boolean",
					"default": false,
					"description": "If enabled, this will use utsc-dev instead of utsc."
				},
				"airship.colorPicker.enabled": {
					"type": "boolean",
					"default": true,
					"description": "If enabled, this will enable the color picker. (reload required)"
				},
				"airship.colorPicker.precision": {
					"type": "number",
					"default": 2,
					"description": "The amount of digits to round to while using the color picker."
				},
				"airship.colorPicker.defaultOption": {
					"type": "string",
					"default": "new",
					"enum": [
						"new",
						"hsvToRGB"
					],
					"enumDescriptions": [
						"Use new Color() as the default in the color picker",
						"Use Color.HSVToRGB as the default in the color picker"
					]
				},
				"airship.openOutputToSide": {
					"type": "boolean",
					"default": true,
					"description": "Determines whether the Open Output command will open the editor to the side."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/chroma-js": "^2.1.3",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.20.1",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^4.13.0",
		"@typescript-eslint/parser": "^4.13.0",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"vscode-test": "^1.4.1"
	},
	"dependencies": {
		"chroma-js": "^2.1.1",
		"roblox-ts-extensions": "^1.7.2",
		"tree-kill": "^1.2.2",
		"typescript": "^4.3.2"
	}
}
