{
	"name": "airship-vscode",
	"publisher": "vorlias",
	"displayName": "Airship Extension",
	"description": "A plugin that extends the capabilities of Airship for vscode",
	"version": "1.3.1",
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.103.2"
	},
	"categories": [
		"Snippets",
		"Other"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/easy-games/airship-vscode"
	},
	"main": "./dist/extension.js",
	"activationEvents": [
		"workspaceContains:AirshipPackages/@Easy/Core"
	],
	"contributes": {
		"semanticTokenScopes": [
			{
				"language": "typescript",
				"scopes": {
					"macro": [
						"keyword.control"
					]
				}
			}
		],
		"semanticTokenModifiers": [
			{
				"id": "directive",
				"description": "A directive"
			}
		],
		"typescriptServerPlugins": [
			{
				"name": "@easy-games/airship-typescript-extensions",
				"enableForWorkspaceTypeScriptVersions": true
			}
		],
		"snippets": [
			{
				"language": "typescript",
				"path": "./snippets/airship.code-snippets"
			}
		],
		"commands": [
			{
				"command": "airship.openOutput",
				"title": "View Compiled Luau Code",
				"category": "Airship",
				"icon": "images/icons/script.svg"
			},
			{
				"command": "airship.openPublishedOutputServer",
				"title": "View Published Server Code",
				"category": "Airship",
				"icon": "images/icons/script.svg"
			},
			{
				"command": "airship.openPublishedOutputClient",
				"title": "View Published Client Code",
				"category": "Airship",
				"icon": "images/icons/script.svg"
			},
			{
				"command": "airship.create-component",
				"title": "Create New Behaviour...",
				"category": "Airship"
			},
			{
				"command": "airship.create-singleton",
				"title": "Create New Singleton...",
				"category": "Airship"
			}
		],
		"submenus": [
			{
				"id": "airship.create",
				"label": "Airship",
				"icon": "$(file-code)"
			},
			{
				"id": "airship.sourceFile",
				"label": "Airship",
				"icon": "$(file-code)"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "airship.openOutput",
					"when": "airship:isSourceFile",
					"group": "navigation@1"
				}
			],
			"explorer/context": [
				{
					"submenu": "airship.create",
					"when": "explorerResourceIsFolder && !(resourcePath =~ /TypeScript~/is)",
					"group": "1_Airship"
				},
				{
					"submenu": "airship.sourceFile",
					"when": "!explorerResourceIsFolder && resourceExtname == .ts && !(resourcePath =~ /TypeScript~/is)",
					"group": "1_Airship"
				}
			],
			"airship.sourceFile": [
				{
					"command": "airship.openOutput"
				}
			],
			"airship.create": [
				{
					"command": "airship.create-component"
				},
				{
					"command": "airship.create-singleton"
				}
			],
			"commandPalette": [
				{
					"command": "airship.openOutput",
					"when": "airship:inSrcDir"
				}
			]
		},
		"configuration": {
			"title": "Airship TypeScript",
			"properties": {
				"airship.editor.hideDeprecated": {
					"type": "boolean",
					"default": true,
					"description": "Hide deprecated members from intellisense."
				},
				"airship.editor.showInvalidAirshipTypeScriptErrors": {
					"type": "boolean",
					"default": false,
					"description": "Display errors that are specific to the Airship TypeScript compiler"
				},
				"airship.colorPicker.enabled": {
					"type": "boolean",
					"default": true,
					"description": "If enabled, this will enable the color picker. (reload required)"
				},
				"airship.colorPicker.precision": {
					"type": "number",
					"default": 2,
					"description": "The amount of digits to round to while using the color picker."
				},
				"airship.networkBoundary.showNetworkBoundary": {
					"type": "boolean",
					"default": true,
					"description": "Will display network boundary information on suggestions as well as tooltips"
				},
				"airship.networkBoundary.networkBoundaryCheck": {
					"type": "string",
					"default": "off",
					"description": "The behaviour to do when a client/server method called in the wrong location is detected. Note: This may be performance heavy currently.",
					"enum": [
						"warning",
						"off"
					],
					"enumDescriptions": [
						"Give errors for improper use of network boundaries",
						"Give warnings for improper use of network boundaries",
						"Ignore improper usage of network boundaries"
					]
				},
				"airship.colorPicker.defaultOption": {
					"type": "string",
					"default": "new",
					"enum": [
						"new",
						"hsvToRGB"
					],
					"enumDescriptions": [
						"Use new Color() as the default in the color picker",
						"Use Color.HSVToRGB as the default in the color picker"
					]
				},
				"airship.openOutputToSide": {
					"type": "boolean",
					"default": true,
					"description": "Determines whether the Open Output command will open the editor to the side."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run esbuild-base -- --minify",
		"esbuild-base": "esbuild ./src/extension.ts --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --bundle",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
		"package": "vsce package"
	},
	"devDependencies": {
		"@types/chroma-js": "^2.1.3",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.20.1",
		"@types/ts-expose-internals": "npm:ts-expose-internals@=5.5.2",
		"@types/vscode": "^1.103.2",
		"@typescript-eslint/eslint-plugin": "^4.13.0",
		"@typescript-eslint/parser": "^4.13.0",
		"esbuild": "^0.20.2",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"vscode-test": "^1.4.1"
	},
	"dependencies": {
		"@easy-games/airship-typescript-extensions": "github:easy-games/airship-typescript-extensions",
		"chroma-js": "^2.1.1",
		"roblox-ts-extensions": "^1.7.2",
		"tree-kill": "^1.2.2",
		"typescript": "=5.5.2"
	}
}
